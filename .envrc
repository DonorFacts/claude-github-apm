# APM Framework Environment Configuration
# Automatically configures containerized Claude execution

# Add local bin to PATH for transparent container wrapper (highest priority)
export PATH="$PWD/.local/bin:$PATH"

# Container security configuration
export APM_SECURITY_LEVEL=${APM_SECURITY_LEVEL:-standard}
export APM_CONTAINERIZED=${APM_CONTAINERIZED:-true}

# Debug mode (set to true for container debugging)
export APM_DEBUG=${APM_DEBUG:-true}