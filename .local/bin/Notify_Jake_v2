#!/usr/bin/env tsx

/**
 * Updated notification script using host-bridge system
 * Provides both audio and speech notifications
 */

import { hostBridge } from '../../src/tools/host-bridge/index.js';

async function notifyJake() {
  try {
    // Play notification sound
    const audioSuccess = await hostBridge.audio_play('Hero.aiff');
    
    // Speak notification
    const speechSuccess = await hostBridge.speech_say('Task completed by Claude Code!');
    
    if (audioSuccess || speechSuccess) {
      console.log('üîî Jake notified successfully!');
    } else {
      console.log('‚ö†Ô∏è  Notification may have failed - check host-bridge daemon');
    }
  } catch (error) {
    console.error('‚ùå Notification failed:', (error as Error).message);
    console.log('üí° Ensure host-bridge daemon is running: ./.local/bin/host-bridge-daemon.sh');
  }
}

notifyJake();