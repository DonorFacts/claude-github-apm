{
  "name": "@jakedetels/claude-github-apm",
  "version": "0.1.0",
  "description": "GitHub automation framework for Claude Code workflows",
  "main": "./lib/index.js",
  "bin": {
    "claude-github-apm": "./bin/claude-framework.js"
  },
  "files": [
    "bin",
    "scripts",
    "lib",
    "templates",
    "src"
  ],
  "scripts": {
    "dev": "echo 'Framework ready for linking'",
    "link": "pnpm link --global",
    "unlink": "pnpm unlink --global",
    "build:prompts": "tsx src/scripts/command-sync/index.ts",
    "build": "npm run build:prompts",
    "clean": "rm -rf dist",
    "ts-check": "tsc --noEmit",
    "test": "tsc --noEmit && jest --silent",
    "test:verbose": "tsc --noEmit && jest --verbose",
    "test:prod": "tsc --noEmit && APM_TEST_PROD=true jest --silent --runInBand",
    "test:prod:verbose": "tsc --noEmit && APM_TEST_PROD=true jest --verbose --runInBand",
    "watch:commands": "tsx src/scripts/command-sync/index.ts --watch",
    "sync:commands": "tsx src/scripts/command-sync/index.ts",
    "sync:main": "./src/scripts/git/sync-main.sh",
    "container:shell": "./.local/bin/claude-shell",
    "shell": "npm run container:shell",
    "start": "./src/scripts/watch-all.sh",
    "container:start": "tsx src/scripts/docker/apm-container.dev.ts start",
    "container:stop": "tsx src/scripts/docker/apm-container.dev.ts stop",
    "container:status": "tsx src/scripts/docker/apm-container.dev.ts status",
    "container:logs": "tsx src/scripts/docker/apm-container.dev.ts logs",
    "container:bash": "tsx src/scripts/docker/apm-container.dev.ts shell",
    "claude": "./.local/bin/claude-container"
  },
  "keywords": [
    "claude",
    "agentic",
    "github",
    "automation",
    "cli"
  ],
  "author": "Jake Detels",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DonorFacts/claude-github-apm.git"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.4",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0"
  }
}
