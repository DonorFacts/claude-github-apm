{
  "name": "@jakedetels/claude-github-apm",
  "version": "0.1.0",
  "description": "GitHub automation framework for Claude Code workflows",
  "main": "./lib/index.js",
  "bin": {
    "claude-github-apm": "./bin/claude-framework.js"
  },
  "files": [
    "bin",
    "scripts",
    "lib",
    "templates",
    "src"
  ],
  "scripts": {
    "dev": "echo 'Framework ready for linking'",
    "link": "pnpm link --global",
    "unlink": "pnpm unlink --global",
    "postinstall": "node scripts/postinstall.js",
    "build:prompts": "node lib/create-command-files.js",
    "build": "npm run build:prompts",
    "clean": "rm -rf dist",
    "test": "jest"
  },
  "keywords": [
    "claude",
    "agentic",
    "github",
    "automation",
    "cli"
  ],
  "author": "Jake Detels",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DonorFacts/claude-github-apm.git"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.4",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3"
  }
}
